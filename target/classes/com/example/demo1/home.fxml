<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="30.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo1.HomeController" style="-fx-background-color: #3498db; -fx-padding: 50;">
    
    <Label text="Welcome to CV Builder" textFill="white" style="-fx-font-size: 40px; -fx-font-weight: bold;">
        <font>
            <Font size="40.0" name="System Bold"/>
        </font>
    </Label>
    
    <Label text="Create your professional resume in minutes" textFill="white" style="-fx-font-size: 16px;">
        <font>
            <Font size="16.0"/>
        </font>
    </Label>
    
    <VBox alignment="CENTER" spacing="15.0" style="-fx-padding: 30 0 0 0;">
        <Button text="Create New CV" onAction="#handleCreateNewCV" prefWidth="200.0" prefHeight="50.0" style="-fx-background-color: #ffffff; -fx-text-fill: #3498db; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;">
            <font>
                <Font size="16.0" name="System Bold"/>
            </font>
        </Button>
        
        <Label text="Build your dream career starts here" textFill="white" style="-fx-font-size: 14px; -fx-padding: 10 0 0 0;">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
    </VBox>
    
</VBox>
